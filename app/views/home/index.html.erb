<div class="p-4 sm:ml-64">



  <div class="p-2  rounded-lg">


    <div class="flex items-center justify-between h-80 mb-4 rounded bg-[#168CCE]">
      <div>
        <p class="text-xl md:text-4xl md:ml-10 text-white">NEED TO ACCESS YOUR <br/>MEDICAL RECORDS</p>
        <button class="md:ml-10 border  hover:border-[#FFF] rounded-lg p-2 mt-2 bg-[#FFF] hover:bg-[#22214F] hover:text-[#FFF]">ADD PATIENT</button>
      </div>

      <p><%= image_tag "mandoc.png", class: "relative h-40 md:h-52 right-6 md:right-10 bottom-6 mr-6 md:mr-10"%></p>
    </div>


    <div class="grid grid-cols-4 gap-4 mb-4">
      <div class="flex items-center justify-center h-28 rounded bg-gray-50 dark:bg-gray-800">
        <p class="text-2xl text-gray-400 dark:text-gray-500">One</p>
      </div>
      <div class="flex items-center justify-center h-28 rounded bg-gray-50 dark:bg-gray-800">
        <p class="text-2xl text-gray-400 dark:text-gray-500">Two</p>
      </div>
      <div class="flex items-center justify-center h-28 rounded bg-gray-50 dark:bg-gray-800">
        <p class="text-2xl text-gray-400 dark:text-gray-500">Three</p>
      </div>
      <div class="flex items-center justify-center h-28 rounded bg-gray-50 dark:bg-gray-800">
        <p class="text-2xl text-gray-400 dark:text-gray-500">Four</p>
      </div>
    </div>

    <div className="w-[100%] overflow-x-auto ">
          <table className="w-[100%] text-sm text-left">
            <thead className="text-xs border-b-2 border-black text-[#878787]  ">
              <tr>
               
                <th scope="col" className="px-6 py-3">
                 First Name
                </th>
                    <th scope="col" className="px-6 py-3">
                 Last Name
                </th>
                <th scope="col" className="px-6 py-3">
                  Gender
                </th>
                <th scope="col" className="px-6 py-3">
                  Blood Group
                </th>

                <th scope="col" className="px-6 py-3">
                  Phone Number
                </th>
                <th scope="col" className="px-6 py-3">
                  Date of Birth
                </th>
              </tr>
            </thead>
            <tbody>
            <% @patients.each do |patient| %>
              
                <tr className=" border-b-2 w-[90%] mx-auto border-[#E1E1E1] ">
                 
                  <td className="px-6 py-4">
                  <%= patient.first_name %>
                    
                  </td>
                  <td className="px-6 py-4">
                   <%= patient.last_name %>
                   </td>
                  <td className="px-6 py-4"> </td>
                  <td className="px-6 py-4"> </td>
                  <td className="px-6 py-4">  </td>
                  <td className="px-6 py-4"> </td>
                </tr>
              <%end%>
            </tbody>
            

</table>
            </div>
  
    <div class="flex items-center justify-center h-48 mb-4 rounded bg-gray-50 dark:bg-gray-800">
      <p class="text-2xl text-gray-400 dark:text-gray-500">Wide</p>
    </div>
   
  </div>
</div>